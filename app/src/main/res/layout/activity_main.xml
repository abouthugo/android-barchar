<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

        <TextView
          android:id="@+id/cat1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/cat1"/>
        <EditText
          android:id="@+id/cat1_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:height="1dp"
          android:inputType="number"/>

        <TextView
          android:id="@+id/cat2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/cat2"/>
        <EditText
          android:id="@+id/cat2_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="number"/>

        <TextView
          android:id="@+id/cat3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/cat3"/>
        <EditText
          android:id="@+id/cat3_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="number"/>

        <TextView
          android:id="@+id/cat4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/cat4"/>
        <EditText
          android:id="@+id/cat4_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="number"/>

        <TextView
          android:id="@+id/cat5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/cat5"/>
        <EditText
          android:id="@+id/cat5_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="number"/>

        <TextView
          android:id="@+id/cat6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/cat6"/>
        <EditText
          android:id="@+id/cat6_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="number"/>
        <Button
          android:id="@+id/button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Calculate"
          android:onClick="calculate"
          android:textAllCaps="false"
          />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>